{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (dev:mock)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["run", "dev:mock"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.local",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Webapp Dev",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["run", "webapp:dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/webapp"
    },
    {
      "name": "Webapp Extension Dev",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["run", "webapp:extension:dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src/webapp"
    }
  ],
  "compounds": [
    {
      "name": "Launch All Services",
      "configurations": [
        "Backend (dev:mock)",
        "Webapp Dev", 
        "Webapp Extension Dev"
      ],
      "stopAll": true
    }
  ]
}
